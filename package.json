{
  "name": "musicxml-mma",
  "version": "0.4.3",
  "description": "MusicXML to Musical MIDI Accompaniment (MMA) converter",
  "main": "server.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:grooves": "${MMA_HOME:-../mma}/mma.py -g",
    "build:sef": "xslt3 -xsl:musicxml-mma.xsl -export:musicxml-mma.sef.json -t -ns:##html5",
    "convert:mma": "run() { xslt3 -xsl:musicxml-mma.xsl -s:\"$1\" -o:\"${1/.musicxml/.mma}\"; }; run",
    "convert:midi": "run() { ${MMA_HOME:-../mma}/mma.py \"$1\" -f \"${1/.mma/.mid}\"; }; run",
    "print:chord": "run() { echo \"PrintChord $1\" | ${MMA_HOME:-../mma}/mma.py -n -; }; run",
    "print:grooves": "find ${MMA_HOME:-../mma}/lib -name '*.mma' | while read f; do ${MMA_HOME:-../mma}/mma.py -Dbo \"$f\" | tail -n +2; done",
    "develop": "nodemon -e js,json server.js",
    "test:xsl": "./test/libs/bats/bin/bats test/*.bats",
    "test:server": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "test": "npm run test:xsl && npm run test:server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infojunkie/musicxml-mma.git"
  },
  "author": "Karim Ratib <karim.ratib@gmail.com> (https://github.com/infojunkie)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/infojunkie/musicxml-mma/issues"
  },
  "homepage": "https://github.com/infojunkie/musicxml-mma#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "morgan": "^1.10.0",
    "saxon-js": "^2.3.0",
    "xslt3": "^2.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {},
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
